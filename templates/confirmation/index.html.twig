{% extends 'base.html.twig' %}

{% block title %}Confirmation
{% endblock %}

{% block body %}
	<h1 class="title">CONFIRMATION</h1>
	<ul>
		{% for offerDetailsPerReservation in offerDetails %}
			{% for offerDetail in offerDetailsPerReservation %}
				<li>
					<strong>Offre :</strong>
					{{ offerDetail.offerName }}
					<br>
					<strong>Quantité :</strong>
					{{ offerDetail.numberOfTickets }}
				</li>
			{% endfor %}
		{% endfor %}
	</ul>

	<a href="{{ url('app_confirmation_ticket') }}">Télécharger votre billet</a>
{% endblock %}
