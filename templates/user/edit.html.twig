{% extends 'base.html.twig' %}

{% block title %}Modification de l'utilisateur
{% endblock %}

{% block body %}
	<section>
		<div class="container">
			<article>
				<h1 class="title">MODIFICATION DU PROFIL</h1>
				<aside>
					{% for message in app.flashes('success') %}
						<div class="alert alert-success mt-4 flash">
							{{ message }}
						</div>
					{% endfor %}

					{% for message in app.flashes('error') %}
						<div class="alert alert-danger flash">
							{{ message }}
						</div>
					{% endfor %}
				</aside>
				<div class="form">
					{{ form_start(form,  {'attr':{'novalidate':'novalidate'}}) }}
					{{ form_row(form.email) }}
					{{ form_row(form.firstname) }}
					{{ form_row(form.lastname) }}
					<button type="submit">
						MODIFIER MON PROFIL
					</button>
					{{ form_end(form) }}
				</div>
			</article>
		</div>
	</section>
{% endblock %}
